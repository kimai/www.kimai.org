---
layout: none
feed_entries: 10
permalink: /feed.xml
redirect_from:
  - /plugins/news/rss.php
---

<?xml version="1.0" encoding="utf-8"?>
<rss version="2.0"
     xmlns:content="http://purl.org/rss/1.0/modules/content/"
     xmlns:wfw="http://wellformedweb.org/CommentAPI/"
     xmlns:dc="http://purl.org/dc/elements/1.1/"
     xmlns:atom="http://www.w3.org/2005/Atom"
     xmlns:sy="http://purl.org/rss/1.0/modules/syndication/"
     xmlns:slash="http://purl.org/rss/1.0/modules/slash/"
        >
    <channel>
        <title xml:lang="en">Kimai - Open Source Time-Tracking</title>
        <atom:link type="application/atom+xml" href="http://www.kimai.org/feed.xml" rel="self"/>
        <link>https://www.kimai.org/</link>
        <pubDate>{{ site.time | date_to_rfc822 }}</pubDate>
        <lastBuildDate>{{ site.time | date_to_rfc822 }}</lastBuildDate>
        <language>en-US</language>
        <generator>Jekyll v{{ jekyll.version }}</generator>
        <description>Kimai - an open source time tracking software for freelancer and agencies</description>
        <image>
            <description>Kimai logo</description>
            <url>https://www.kimai.org/assets/icon/apple-touch-icon.png</url>
            <title>Kimai - Open Source Time-Tracking</title>
            <link>https://www.kimai.org/</link>
            <width>184</width>
            <height>184</height>
        </image>
        {% for post in site.posts %}
            {% if forloop.index <= page.feed_entries %}
            <item>
                <title>{{ post.title | xml_escape}}</title>
                <link>https://www.kimai.org{{ post.url }}</link>
                <pubDate>{{ post.date | date_to_rfc822 }}</pubDate>
                <dc:creator>{{ post.author }}</dc:creator>
                {% for tag in post.tags %}
                <category>{{ tag | xml_escape }}</category>
                {% endfor %}
                {% for cat in post.categories %}
                <category>{{ cat | xml_escape }}</category>
                {% endfor %}
                <guid isPermaLink="true">https://www.kimai.org{{ post.url }}</guid>
                <description>
                    <![CDATA[
                        {{ post.excerpt }}
                        ...
                        <a href="https://www.kimai.org{{ post.url }}">read more</a>
                    ]]>
                </description>
            </item>
            {% endif %}
        {% endfor %}
    </channel>
</rss>